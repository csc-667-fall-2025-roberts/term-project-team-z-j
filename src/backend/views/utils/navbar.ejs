<% 
  const isDark = typeof theme !== 'undefined' && theme === 'dark';
  const textClass = isDark ? 'text-white/90' : 'text-gray-700';
  const btnClass = isDark 
    ? 'bg-white/10 hover:bg-white/20 text-white border border-white/20 backdrop-blur-md hover:shadow-[0_0_20px_rgba(255,255,255,0.2)]' 
    : 'bg-gray-600 hover:bg-gray-700 text-white';
  const isLoggedIn = typeof user !== 'undefined' && user !== null;
%>

<!-- Navbar -->
<div class="absolute top-8 left-12 z-20">
  <h2 class="text-4xl font-normal <%= textClass %> tracking-tight">Texas Hold 'em</h2>
</div>

<!-- Auth Button -->
<div class="absolute top-8 right-8 z-20">
  <% if (isLoggedIn) { %>
    <div class="flex items-center gap-4">
      <span class="<%= textClass %> font-medium">Logged in as <%= user.username %></span>
      <button onclick="location.href='/lobby'" class="<%= btnClass %> font-semibold px-6 py-3 rounded-full transition-all duration-300">
        Lobby
      </button>
      <button onclick="location.href='/auth/logout'" class="<%= btnClass %> font-semibold px-6 py-3 rounded-full transition-all duration-300">
        Logout
      </button>
    </div>
  <% } else { %>
    <button onclick="location.href='/auth/signup'" class="<%= btnClass %> font-semibold px-6 py-3 rounded-full transition-all duration-300">
      Sign In / Sign Up
    </button>
  <% } %>
</div>
